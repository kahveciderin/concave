{
  "name": "concave",
  "version": "1.0.0",
  "description": "Real-time resource API framework for Express.js with TypeScript client",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "import": "./dist/client/index.js"
    },
    "./resource": {
      "types": "./dist/resource/hook.d.ts",
      "import": "./dist/resource/hook.js"
    },
    "./auth": {
      "types": "./dist/auth/index.d.ts",
      "import": "./dist/auth/index.js"
    },
    "./client/react": {
      "types": "./dist/client/react.d.ts",
      "import": "./dist/client/react.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "prepublishOnly": "npm run build",
    "start": "node dist/index.js",
    "lint": "eslint 'src/**/*.ts'",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "example:dev": "pnpm build && pnpm example:frontend:build && tsx watch --tsconfig example/tsconfig.json example/src/main.ts",
    "example:start": "node example/dist/main.js",
    "example:build": "tsc -p example/tsconfig.json && tsc-alias -p example/tsconfig.json",
    "example:frontend:install": "cd example/frontend && pnpm install",
    "example:frontend:build": "cd example/frontend && pnpm build",
    "example:frontend:dev": "cd example/frontend && pnpm dev",
    "example:setup": "pnpm build && pnpm example:frontend:install && pnpm example:frontend:build",
    "example:db:push": "drizzle-kit push",
    "example:typegen": "tsx example/scripts/typegen.ts"
  },
  "keywords": [
    "api",
    "rest",
    "realtime",
    "express",
    "drizzle",
    "orm",
    "crud",
    "typescript",
    "sse",
    "subscriptions"
  ],
  "author": "",
  "repository": {
    "type": "git",
    "url": ""
  },
  "dependencies": {
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.2.3",
    "drizzle-zod": "^0.8.3",
    "uuid": "^13.0.0"
  },
  "peerDependencies": {
    "drizzle-orm": ">=0.30.0",
    "express": ">=4.0.0",
    "react": ">=18.0.0",
    "zod": ">=3.0.0"
  },
  "peerDependenciesMeta": {
    "express": {
      "optional": true
    },
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@libsql/client": "^0.17.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cookie-parser": "^1.4.8",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.8",
    "@types/react": "^18.3.12",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "better-sqlite3": "^12.6.0",
    "drizzle-kit": "^0.31.8",
    "drizzle-orm": "^0.45.1",
    "eslint": "^9.39.2",
    "express": "^5.2.1",
    "nodemon": "^3.1.11",
    "prettier": "^3.8.0",
    "supertest": "^7.2.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^3.1.4",
    "zod": "^4.3.5"
  }
}